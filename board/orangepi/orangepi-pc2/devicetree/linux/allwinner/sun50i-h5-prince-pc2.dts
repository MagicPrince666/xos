/dts-v1/;
#include "sun50i-h5.dtsi"
#include <dt-bindings/pwm/pwm.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/pinctrl/sun4i-a10.h>

/ {
	model = "Xunlong Prince Pi PC 2";
	compatible = "xunlong,orangepi-pc2", "allwinner,sun50i-h5";

	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	aliases {
		ethernet0 = &emac;
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	connector {
		compatible = "hdmi-connector";
		type = "a";

		port {
			hdmi_con_in: endpoint {
				remote-endpoint = <&hdmi_out_con>;
			};
		};
	};

	leds {
		compatible = "gpio-leds";

		pwr {
			label = "orangepi:green:pwr";
			gpios = <&r_pio 0 10 GPIO_ACTIVE_HIGH>;
			default-state = "on";
			linux,default-trigger = "heartbeat";
		};

		status {
			label = "orangepi:red:status";
			gpios = <&pio 0 20 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		backlight {
			label = "backlight";
			gpios = <&pio 2 4 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	r-gpio-keys {
		compatible = "gpio-keys";

		sw4 {
			label = "sw4";
			linux,code = <BTN_0>;
			gpios = <&r_pio 0 3 GPIO_ACTIVE_LOW>;
		};
	};

	reg_gmac_3v3: gmac-3v3 {
		compatible = "regulator-fixed";
		regulator-name = "gmac-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		startup-delay-us = <100000>;
		enable-active-high;
		gpio = <&pio 3 6 GPIO_ACTIVE_HIGH>;
	};

	reg_usb0_vbus: usb0-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb0-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		gpio = <&r_pio 0 2 GPIO_ACTIVE_HIGH>; /* PL2 */
		status = "okay";
	};
/*
	backlight: backlight {
		compatible = "gpio-backlight";
		gpios = <&pio 2 4 GPIO_ACTIVE_HIGH>; // PC4
		default-on;
	};
*/
};

&codec {
	allwinner,audio-routing =
		"Line Out", "LINEOUT",
		"MIC1", "Mic",
		"Mic",  "MBIAS";
	status = "okay";
};

&de {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&ehci2 {
	status = "okay";
};

&ehci3 {
	status = "okay";
};

&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_rgmii_pins>;
	phy-supply = <&reg_gmac_3v3>;
	phy-handle = <&ext_rgmii_phy>;
	phy-mode = "rgmii-id";
	local-mac-address = [a4 51 29 00 00 07];
	status = "okay";
};

&external_mdio {
	ext_rgmii_phy: ethernet-phy@1 {
		compatible = "ethernet-phy-ieee802.3-c22";
		reg = <1>;
	};
};

&hdmi {
	status = "okay";
};

&hdmi_out {
	hdmi_out_con: endpoint {
		remote-endpoint = <&hdmi_con_in>;
	};
};

&ir {
	pinctrl-names = "default";
	pinctrl-0 = <&r_ir_rx_pin>;
	status = "okay";
};

&mmc0 {
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6 */
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&ohci2 {
	status = "okay";
};

&ohci3 {
	status = "okay";
};

&spi0  {
	pinctrl-names = "default";
    pinctrl-0 = <&spi0_pins>;
	status = "okay";

	spi-nor@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		status = "disabled";

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x0E0000>;
			};
			partition@e0000 {
				label = "u-boot-env";
				reg = <0x0E0000 0x020000>;
			};
			partition@100000 {
				label = "ubi";
				reg = <0x100000 0x100000>;
			};

		};
	};

	spi-nand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <50000000>;
		status = "okay";

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x80000>;
				read-only;
			};

			partition@1 {
				label = "dtb";
				reg = <0x80000 0x20000>;
				read-only;
			};

			partition@2 {
				label = "kernel";
				reg = <0x100000 0x700000>;
				read-only;
			};

			partition@3 {
				label = "rom";
				reg = <0x800000 0x4000000>;
				read-only;
			};

			partition@4 {
				label = "overlay";
				reg = <0x4800000 0x3800000>;
			};
		};
	};
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pa_pins>;
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
	status = "disabled";
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	status = "disabled";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	/* USB Type-A ports' VBUS is always on */
	usb0_id_det-gpios = <&pio 6 12 GPIO_ACTIVE_HIGH>; /* PG12 */
	usb0_vbus-supply = <&reg_usb0_vbus>;
	status = "okay";
};

&pio {
	spi1_pins_cs1: spi1_pins_cs1 {
		pins = "PA13", "PA21";
		function = "gpio_out";
	};

	spi1_pins: spi1-pins {
		pins = "PA15", "PA16", "PA14", "PA13";
		function = "spi1";
	};

	pwm0_pin: pwm0@0 {
		pins = "PA5";
		function = "pwm0";
	};

	backlight_pins: backlight_pins {
		pins = "PC4";
		function = "gpio_out";
	};
};
/*
&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pin>;
	status = "okay";
};
*/
&spi1 {
    #address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	spi-num-chipselects = <2>;
	pinctrl-0 = <&spi1_pins &spi1_pins_cs1>;
	cs-gpios = <&pio 0 13 GPIO_ACTIVE_HIGH>, <&pio 0 21 GPIO_ACTIVE_HIGH>;
	status = "okay";

	ili9341@0 {
		compatible = "ilitek,ili9341";
		reg = <0>;
		status = "okay";
		spi-max-frequency = <50000000>;
		rotate = <270>;
		bgr;
		fps = <30>;
		buswidth = <8>;
		reset-gpios = <&pio 0 3 GPIO_ACTIVE_LOW>; 	//PA3
		dc-gpios = <&pio 0 2 GPIO_ACTIVE_HIGH>;		//PA2
		debug = <0>;
		//backlight = <&backlight>;
	};

	tsc2046@1 {
			reg = <1>;	/* CS1 */
			compatible = "ti,tsc2046";
			interrupt-parent = <&pio>;
			interrupts = <2 7 IRQ_TYPE_LEVEL_LOW>;	//PC7
			spi-max-frequency = <1000000>;
			pendown-gpio = <&pio 2 7 GPIO_ACTIVE_LOW>;
			vcc-supply = <&reg_vcc3v3>;

			ti,x-min = /bits/ 16 <0>;
			ti,x-max = /bits/ 16 <320>;
			ti,y-min = /bits/ 16 <0>;
			ti,y-max = /bits/ 16 <240>;
			ti,x-plate-ohms = /bits/ 16 <40>;
			ti,pressure-max = /bits/ 16 <255>;

			wakeup-source;
		};
};
